{
  "extends": "@galacticcouncil/typescript-config/vite.json",
  "include": ["src"],
  "exclude": ["src/codegen/__generated__"],
  "references": [
    { "path": "../../packages/ui" },
    { "path": "../../packages/utils" },
    { "path": "../../packages/web3-connect" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "jsxImportSource": "@galacticcouncil/ui/jsx",
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@polkadot-api/descriptors": ["../../.papi/descriptors"]
    },
    "declaration": false,
    "declarationMap": false,
    "noUncheckedIndexedAccess": true
  }
}