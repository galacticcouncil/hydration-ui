{
  "extends": "@galacticcouncil/typescript-config/base.json",
  "include": ["src", "src/**/*.json"],
  "references": [
    { "path": "../ui" },
    { "path": "../utils" },
    { "path": "../indexer" }
  ],
  "compilerOptions": {
    "composite": true,
    "outDir": "./build",
    "baseUrl": ".",
    "jsxImportSource": "@galacticcouncil/ui/jsx",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"]
    },
  }
}
